        ["全球购秒杀", "http://promotion.liqunshop.com/PromotionHtml/Promotion/3559.html"]//最后一个不要加逗号
    ], //搜索下方关键字

    defaultKeyWord: '欧珀莱', //搜索框中的默认文字
